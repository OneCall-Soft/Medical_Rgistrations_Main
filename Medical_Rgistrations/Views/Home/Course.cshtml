@model MyHtmlContent

@{
    ViewBag.title = "Schemes";
    List<string> filesUrl = new List<string>();
    string img1 = "/user/img/after.jpg";
    string img2 = "/user/img/service-1.jpg";
    string img3 = "/user/img/service-2.jpg";
    string img4 = "/user/img/service-3.jpg";
    string img5 = "/user/img/service-4.jpg";

    @if (Model != null)
    {

        if (Model.imgages != null)
        {
            var files = Model.imgages.fileName.Split('#');

            if (files.Length > 0)
            {
                for (int i = files.Length; i--> 0;)
                {
                    var actualUrl = "/Image_Gallary/" + files[i];
                    filesUrl.Add(actualUrl);
                }
            }

        }

        @if (filesUrl.Count > 0)
            img1 = filesUrl[0];
        @if (filesUrl.Count > 1)
            img2 = filesUrl[1];
        @if (filesUrl.Count > 2)
            img3 = filesUrl[2];
        @if (filesUrl.Count > 3)
            img4 = filesUrl[3];
        @if (filesUrl.Count > 4)
            img5 = filesUrl[4];
    }

}




