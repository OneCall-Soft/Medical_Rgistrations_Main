@model MyHtmlContent

@{
    ViewBag.title = "AboutUs";
    Layout = "_Layout";

    List<string> filesUrl = new List<string>();

    @if (Model != null)
    {

        if (Model.imgages != null)
        {
            var files = Model.imgages.fileName.Split('#');

            if (files.Length > 0)
            {
                foreach (var item in files)
                {

                    var actualUrl = "/Image_Gallary/" + item;
                    filesUrl.Add(actualUrl);
                }
            }

        }
    }
}


