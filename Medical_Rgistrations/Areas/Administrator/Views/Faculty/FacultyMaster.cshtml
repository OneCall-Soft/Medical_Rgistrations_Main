<form asp-action="FacultyMaster" asp-asp-controller="Admin" method="post" enctype="multipart/form-data">

    <div class="card align-content-center p-3 m-5">
        <div class="text-center h2">Faculty Form</div>
        <div class="row p-5  ">
            <div class="col-md-12">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="InstituteName" class="form-label"></label>
                    <input class="form-control" asp-for="InstituteName" />
                    <span class="text-danger" asp-validation-for="InstituteName"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input class="form-control" asp-for="Email">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>


            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="ProfileImg" class="form-label"></label>
                    <input class="form-control" accept=".jpg,.png,.jpeg" asp-for="ProfileImg">
                    <span class="text-danger" asp-validation-for="ProfileImg"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FacultyType" class="form-label"></label>
                    <select class="form-control" name="FacultyType" id="FacultyType">
                        <option value="uk">UK faculty</option>
                        <option value="sms">SMS team</option>
                    </select>
                    <span class="text-danger" asp-validation-for="FacultyType"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="FacebookLink" class="form-label"></label>
                    <input class="form-control" asp-for="FacebookLink">
                    <span class="text-danger" asp-validation-for="FacebookLink"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="InstaLink" class="form-label"></label>
                    <input class="form-control" asp-for="InstaLink">
                    <span class="text-danger" asp-validation-for="InstaLink"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="TwitterLink" class="form-label"></label>
                    <input class="form-control" asp-for="TwitterLink">
                    <span class="text-danger" asp-validation-for="TwitterLink"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="LinkedInLink" class="form-label"></label>
                    <input class="form-control" asp-for="LinkedInLink">
                    <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                </div>
            </div>
            
            <div class="col-md-12">
                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea class="form-control" asp-for="Description" style="resize:none"></textarea>
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-input" type="checkbox" asp-for="Active" />
                        <label asp-for="Active" class=""></label>
                        <span class="text-danger" asp-validation-for="Active"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="mb-3">
                    <button id="btnRegister" class="btn  btn-md btn-outline-primary float-right ">Add Faculty</button>
                </div>
            </div>
        </div>
    </div>

</form>
