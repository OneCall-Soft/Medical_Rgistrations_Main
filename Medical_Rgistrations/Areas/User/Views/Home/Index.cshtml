@model MyHtmlContent

@{
    ViewBag.title = "Dashboard";

    List<string> filesUrl = new List<string>();

    @if (Model != null)
    {

        if (Model.imgages != null)
        {
            var files = Model.imgages.fileName.Split('#');

            if (files.Length > 0)
            {
                for (int i = files.Length; i-- > 0;)
                {
                    var actualUrl = "/Image_Gallary/" + files[i];
                    filesUrl.Add(actualUrl);
                }
            }

        }
    }

}

<!-- Carousel Start -->
<div class="container-fluid p-0">
    <div id="header-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel">
        <div class="carousel-inner">
            @{
                var index = 0;

                @foreach (var item in filesUrl)
                {
                    if (index == 0)
                    {
                        <div class="carousel-item active">
                            <img class="w-100" src="@item" asp-append-version="true" alt="Image">

                            @if (Model != null)
                            {
                                @Html.Raw(Model.HtmlData)
                            }
                           @*<div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                <div class="p-3" style="max-width: 900px;">
                <h1 class="display-1 text-white animated zoomIn">PACES AT SMS</h1>
                <h5 class="text-white mb-1 animated slideInDown">Training Aspiring Doctors for Paces</h5>
                <h2 class="text-white animated slideInDown">
                Your Gateway to Success
                </h2>
                </div>
                </div>*@
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img class="w-100" src="@item" asp-append-version="true" alt="Image">

                            @if (Model != null)
                            {
                                @Html.Raw(Model.HtmlData)
                            }
                        </div>
                    }
                    index++;
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#header-carousel"
                data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#header-carousel"
                data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>
<!-- Carousel End -->
